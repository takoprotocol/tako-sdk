{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2022",
        "rootDir": "./",
        "outDir": "./build",
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitAny": false,
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
}