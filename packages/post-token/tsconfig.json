{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2022",
        //"rootDir": "./",
        "outDir": "./build",
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitAny": false,
        "declaration": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "baseUrl": "../",
        "paths": {
            "@data/*": [
                "post-token/src/data/*"
            ],
            "@test/*": [
                "post-token/src/test/*",
                "test/*",
            ],
            "@pkg/*": [
                "post-token/src/pkg/*",
                "pkg/*",
            ]
        }
    },
    "include": [
        "src/",
    ]
}